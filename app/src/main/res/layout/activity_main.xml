<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back2">

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="297dp"
            android:layout_height="265dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.073"
            app:srcCompat="@drawable/logoecochile" />

        <Button
            android:id="@+id/btnrecic"
            android:layout_width="460dp"
            android:layout_height="110dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/anim2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

        <Button
            android:id="@+id/btncrea"
            android:layout_width="460dp"
            android:layout_height="110dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/anim"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnrecic"
            app:layout_constraintVertical_bias="0.009" />

        <Button
            android:id="@+id/btncomore"
            android:layout_width="223dp"
            android:layout_height="110dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/animcolor"
            android:text="Â¿Como reciclar?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btncrea"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btntommie"
            android:layout_width="223dp"
            android:layout_height="110dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/animcolor"
            android:text="Acerca de Tommiesoftware"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.266"
            app:layout_constraintStart_toEndOf="@+id/btncomore"
            app:layout_constraintTop_toBottomOf="@+id/btncrea" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>